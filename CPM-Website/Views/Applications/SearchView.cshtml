<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Điều kiện tìm kiếm</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <br />
            <form [formGroup]="searchForm" class="form-horizontal form-label-left" (ngSubmit)="search()" >

                <div class="row">
                    <div class="col-md-5 col-md-offset-1">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Mã ứng dụng
                            </label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                <input name="Code" formControlName="Code" type="text" class="form-control" placeholder="Mã ứng dụng">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Tên ứng dụng
                            </label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                <input name="Name" formControlName="Name" type="text" class="form-control" placeholder="Tên ứng dụng">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 text-center">
                        <button type="submit" 
                                class="btn btn-success"
                                >
                            <span class="glyphicons glyphicons-search"></span>
                            Tìm kiếm
                        </button>
                        <a class="btn btn-primary" routerLink="/addnew">Thêm mới</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Kết quả tìm kiếm</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table id="searchResult" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Mã ứng dụng</th>
                        <th>Tên ứng dụng</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>