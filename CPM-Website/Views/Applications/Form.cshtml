<form id="form" class="form-horizontal form-label-left">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-5 col-md-offset-1">
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                    Mã ứng dụng
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    <input id="Code" name="Code" type="text" class="form-control" placeholder="Mã ứng dụng">
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                    Tên ứng dụng
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    <input id="Name" name="Name" type="text" class="form-control" placeholder="Tên ứng dụng">
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                    Mô tả
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    <textarea id="Description" name="Description" class="form-control" rows="3"></textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 text-center">
            <button type="button" class="btn btn-success" ng-click="">
                <span class="glyphicons glyphicons-plus-sign"></span>
                Thêm mới
            </button>
        </div>
    </div>
</form>