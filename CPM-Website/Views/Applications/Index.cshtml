
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row" ng-controller="ApplicationController">
    <div class="page-title">
        <div class="title_left">
            <h3>Application</h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Điều kiện tìm kiếm</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <form id="searchForm" class="form-horizontal form-label-left">

                    <div class="row">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12">
                            Mã ứng dụng
                        </label>
                        <div class="col-md-3 col-sm-3 col-xs-12">
                            <input id="CodeFilter" name="Code" ng-model="searchData.Code" type="text" class="form-control" placeholder="Mã ứng dụng">
                        </div>
                        <label class="control-label col-md-2 col-sm-2 col-xs-12">
                            Tên ứng dụng
                        </label>
                        <div class="col-md-3 col-sm-3 col-xs-12">
                            <input id="NameFilter" name="Name" ng-model="searchData.Name" type="text" class="form-control" placeholder="Tên ứng dụng">
                        </div>
                    </div>
                    
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 text-center">
                            <button type="button" class="btn btn-primary" ng-click="search()">
                                <span class="glyphicons glyphicons-search"></span>
                                Tìm kiếm
                            </button>
                            <button type="button" class="btn btn-success" ng-click="btnAdd()">
                                <span class="glyphicons glyphicons-plus-sign"></span>
                                Thêm mới
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Kết quả tìm kiếm</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content ">
                <div class="table-responsive">
                    <table id="searchResult" class="table table-bordered table-striped table-hover dt-responsive nowrap" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Thao tác</th>
                                <th>Mã ứng dụng</th>
                                <th>Tên ứng dụng</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div id="addDiv">

    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>{{ titleForm }}</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <form id="form" class="form-horizontal form-label-left" action="/applications/create" method="post">
                    <div id="token">
                        
                    </div>
                    <div class="row form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12">
                            Mã ứng dụng
                        </label>
                        <div class="col-md-3 col-sm-3 col-xs-12">
                            <input id="Code" name="Code" type="text" class="form-control" placeholder="Mã ứng dụng">
                        </div>
                        <label class="control-label col-md-2 col-sm-2 col-xs-12">
                            Tên ứng dụng
                        </label>
                        <div class="col-md-3 col-sm-3 col-xs-12">
                            <input id="Name" name="Name" type="text" class="form-control" placeholder="Tên ứng dụng">
                        </div>
                    </div>
                    <div class="row form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12">
                            Mô tả
                        </label>
                        <div class="col-md-8 col-sm-8 col-xs-12">
                            <textarea id="Description" name="Description" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 text-center">
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                Lưu
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section script{
    <script>

        var ctrl = app.controller('ApplicationController', ['$scope', '$http', function ($scope, $http) {
            $scope.searchData = {
                Code: '',
                Name: '',
                DataTable: {}
            }
            $scope.dataTable = $("#searchResult").DataTable({
                order: [[2, "asc"]],
                ajax: {
                    url: '/applications/searchProcess',
                    type: 'POST',
                    data: function (d) {
                        $scope.searchData.DataTable = d;
                        return $scope.searchData;
                    }
                },
                columns: [
                    {
                        searchable: false,
                        orderable: false,
                        data: null,
                        className: "text-center",
                        render: function (data, type, row, cell) {
                            var info = $scope.dataTable.page.info();
                            var stt = 1 + (info.page * info.length) + cell.row;
                            return stt;
                        }
                    },
                    {
                        searchable: false,
                        orderable: false,
                        data: null,
                        className: "text-center",
                        render: function (data, type, row, cell) {
                            return `<a href="javascript:;" class="text-success" style="margin-right: 7px">
                                    <i class="fa fa-edit fa-2x" title="Sửa"></i>
                                </a>
                                <a href="javascript:;" class="red">
                                    <i class="fa fa-remove fa-2x" title="Xóa"></i>
                                </a>`;
                        }
                    },
                    { data: 'Code', className: "text-center" },
                    { data: 'Name' }
                ]
            });
            angular.element(document).ready(function () {
                NProgress.done();
            });

            $scope.search = function () {
                $scope.dataTable.ajax.reload();
            }

            $scope.btnAdd = function () {
                $http.get('/Applications/Create').then(function (response) {

                });
            }
        }]);
    </script>
}
